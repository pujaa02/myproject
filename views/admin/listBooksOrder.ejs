<%-include ('adminSidebar',{search : 1}) %>
  <div class="table1">
    <h2 class="text-center mt-2">List Book</h2>
    <table class="table text-center table-bordered w-auto">
      <thead>
        <tr>
          <th scope="col" id="table1" onclick="bookOrder('prime_book_id',1)">Id</th>
          <th scope="col" id="table2" onclick="bookOrder('book_title',2)">Title</th>
          <th scope="col" id="table3" onclick="bookOrder('genre_id',3)">GenrerId</th>
          <th scope="col" id="table4" onclick="bookOrder('book_publication',4)">Publication</th>
          <th scope="col" id="table5" onclick="bookOrder('book_publication_year',5)">Year</th>
          <th scope="col" id="table6" onclick="bookOrder('book_ISBN',6)">ISBN</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0 ; i<result2.length ; i++) {%>
          <tr>
            <th scope="row">
              <%= result2[i].prime_book_id %>
            </th>
            <td>
              <%= result2[i].book_title %>
            </td>
          
            <td>
              <%= result2[i].genre_id %>
            </td>
            <td>
              <%= result2[i].book_publication %>
            </td>
            <td>
              <%= result2[i].book_publication_year %>
            </td>
            <td>
              <%= result2[i].book_ISBN %>
            </td>
            <td><a href="/admin/editBook/?bookid=<%=result2[i].prime_book_id %>"><input type="button" value="Edit" class="btn btn-primary"></a>
            </td>
            <td><a href="/admin/deleteBook/?bookid=<%=result2[i].prime_book_id %>"><input type="button" value="Delete" class="btn btn-danger"></a></td>
          </tr>
          <% } ; %>
      </tbody>
    </table>
    <%-include ('pagination',{p,page}) %>
  </div>
  </div>
  </div>
  </body>
    <script>
      window.addEventListener('load',()=>{
       let n = window.sessionStorage.getItem('icon');
       document.getElementById(`table${n}`).style.border = '1px solid orange';
      })
          function bookOrder(column,n){
            let column1 = window.sessionStorage.getItem('column');
            let icon = window.sessionStorage.getItem('icon');       
            if(column1 == `${column}1`){
                window.sessionStorage.setItem('column', `${column}0`);
                window.sessionStorage.setItem('icon',n);
                document.getElementById(`table${n}`).style.border = '1px solid orange';
                window.location.href = `/admin/listbook/${column}/asc`;
            }
        else{
               window.sessionStorage.setItem('column', `${column}1`);
               window.sessionStorage.setItem('icon',n);
               document.getElementById(`table${n}`).style.border = '1px solid orange';
               window.location.href = `/admin/listbook/${column}/desc`;
            }
        }
    </script>
  </html>